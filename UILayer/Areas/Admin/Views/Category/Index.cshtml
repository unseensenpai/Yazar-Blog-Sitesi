@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Kategoriler</h4>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/" class="btn btn-dark" onclick="return confirm('Kategoriyi pasif yapmak istediğinizden emin misiniz?')">Pasif Yap</a></td>
            <td><a href="/Admin/Category/" class="btn btn-primary">Aktif Yap</a></td>
            <td><a href="/Admin/Category/" class="btn btn-secondary">Düzenle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }))
<a href="~/Admin/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
<br />