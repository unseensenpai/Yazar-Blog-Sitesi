@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Düzenleme Sayfası</h4>
                <p class="card-description"></p>
                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">İsim</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="Örnek">
                        @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email Adresi</label>
                        <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="ornek@gmail.com">
                        @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input type="password" class="form-control" id="editpassword1" asp-for="WriterPassword" placeholder="********">
                        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre Onay</label>
                        <input type="password" class="form-control" id="editpassword2" asp-for="WriterPassword" placeholder="********">
                        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Profil Resmi</label>
                        <input type="text" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" asp-for="WriterImage" placeholder="Profil Resmi Yükle">
                            <span class="input-group-append">
                                <button class="form-control file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
                            </span>
                            @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="WriterAbout" placeholder="Kütahya Dumlupınar Üniversitesi Mühendislik Fakültesi Bilgisayar Mühendisliği Öğrencisi Selman Said Gülmez'in 2022 yılında yaptığı bitirme projesidir."></textarea>
                        @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        var writer_Password = document.getElementById("editpassword1")
        var confirm_password = document.getElementById("editpassword2");

        function validatePassword() {
            if (writer_Password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Şifreler Eşleşmiyor.");
            } else {
                confirm_password.setCustomValidity('');
            }
        }
        writer_Password.onchange = validatePassword;
        writer_Password.onkeyup = validatePassword;
        confirm_password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    </script>
}


