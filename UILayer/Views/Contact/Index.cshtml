
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">Bizimle İletişime Geçin</h3>
        <p class="sub text-center">Fikirlerinizi önemsiyoruz</p>
        <div class="contact-map inner-sec">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3079.5039815720293!2d29.8964543153677!3d39.4805330794849!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c9486d6b77991d%3A0xa51a8d9c8451df0e!2sK%C3%BCtahya%20Dumlup%C4%B1nar%20%C3%9Cniversitesi%20M%C3%BChendislik%20Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1649175559573!5m2!1str!2str"
                    class="map" style="border:0" allowfullscreen=""></iframe>
        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row">

                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Adresimiz</h6>
                                <p>
                                    Kütahya, Türkiye
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Mail</h6>
                                <p>
                                    Mail Adresimiz:
                                    <a href="mailto:selman_gulmez@ogr.dpu.edu.tr"> selman_gulmez</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>LinkedIn</h6>
                                <a href="https://www.linkedin.com/in/saidgulmez/"> Said Gülmez</a>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="contact_grid_right">
                <form method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">
                            <div class="form-group">
                                <label for="validationCustom01 my-2" style="font-weight:bold">Adınız Soyadınız</label>
                                <input class="form-control" type="text" name="ContactUserName" placeholder="Said Gülmez" required="">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1" style="font-weight:bold">Mail</label>
                                <input class="form-control" type="email" name="ContactMail" placeholder="ornek@gmail.com" required="">
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03 my-2" style="font-weight:bold">Konu</label>
                                <input class="form-control" type="text" name="ContactSubject" placeholder="Konu başlığınız" required="">
                            </div>
                        </div>
                        <div class="col-md-6 con-right">
                            <div class="form-group">
                                <label for="textarea" style="font-weight:bold">Mesajınız</label>
                                <textarea id="textarea" name="ContactMessage" placeholder=""></textarea>
                            </div>
                            <input class="form-control" type="submit" value="Gönder">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!--//main-->
    <link href="~/CoreBlogTema/css/contact.css" rel="stylesheet" type="text/css" />
</body>

</html>

